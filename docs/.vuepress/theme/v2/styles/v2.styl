//v2 样式工具
.clear-float
  &:after
    content:"."; 
    display:block; 
    height:0; 
    visibility:hidden; 
    clear:both;
.v-middle
  position absolute
  top 50%
  transform translateY(-50%)
.max-width-content
  max-width 1180px


//v2 默认配置
body
  min-width 1200px

.main-wrp-v2
  background-color #fff 
  margin 0 0 80px $navWidth
  min-height 100vh
  transition .9s margin $easeInOutStd 
.v2.sidebar-hidden .main-wrp-v2
  margin 0 0 80px 0
  transition .9s margin $easeInOutStd 200ms
.page-wrp-v2
  background-color #fff
  margin 0 80px 0 80px