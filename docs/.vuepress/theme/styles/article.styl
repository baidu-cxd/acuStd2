@require './config'
@require './custom-blocks'

/*
 *
 * page 样式
 *
 */

.article
  margin-left $sidebarWidth +40px
  margin-right 40px
  margin-top $headerHeight + 40px
  margin-bottom 80px

.article-wrp
  background-color #fff
  max-width 960px
  box-shadow 0 4px 16px 0 #00000010
  margin auto 
  padding 80px 0

.content
  max-width $contentWidth
  margin 0 auto
  padding 0 80px


/*
 *
 *内容文档样式控制
 *
 */



.content
  /* 标题 */
  h1, h2, h3, h4, h5, h6,
    display block
    font-weight 600
    color $textColorDark
  h1
    margin 0 0px 40px 0
    font-size 36px
    line-height 56px
  h2
    padding-top 80px
    margin-bottom 20px
    font-size 22px
    padding-bottom 10px
  h3
    margin 40px 0px 10px 0
    font-size 18px
    line-height 36px
  /* 正文 */
  p
    line-height 26px
    margin 10px 0
    color $textColorMain
  strong
    font-weight 600
    color $textColorDark
  /* 列表 */
  ul, ol
    padding-left 16px
    margin 20px 0
    color $textColorMain
    li
      line-height 26px
      padding-left 0px
      margin 5px 0
    ul
      margin 5px 0
  /* 图片 */
  img
    max-width 100%
    margin 10px 0
  /* 连接 */
  a
    font-weight normal
    color $stdBlue
    text-decoration none
    &:hover
      color lighten($stdBlue, 10%)
  /* 代码 */
  code, kbd//代码样式
    font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace
  p code,li code//行内代码
    background-color #0000000d
    color #666666
    padding 4px 6px
    display inline
    font-size 12px
  /* 块结构 */
  blockquote
    color #999
    border-left 3px solid #dfe2e5
    margin 20px 0
    padding-left 1rem
    font-size 14px
  /* 标记 */
  mark
    background-color transparent
    color $markColor
  /* 分割线 */
  hr
    border 0
    border-top 1px solid $borderColor
    &.footnotes-sep
      margin-top 60px
      margin-bottom 40px
  /* 脚注 */
  .footnotes
    margin-bottom -40px
    position relative
    background-color #f5f5f5ee
    font-size 13px
    padding 20px
    ol,li,p 
      margin 0
      line-height 26px
    &:before
      content "脚注："
      opacity .5
      color $textColorLight
      display block
      font-size 13px
      height 26px
      line-height 26px
      margin 0 0 0px 0
  /* 表格 */
  table
    border-collapse collapse
    margin 20px 0
    width 100%
  tr
    border-top 1px solid #dfe2e5
    &:nth-child(2n)
      background-color #ffff
  th, td
    border 1px solid #dfe2e5
    color $textColorMain
  th 
    line-height 66px
    text-align center
    background-color #fbfbfb
    color $textColorDark
  td
    line-height 26px
    min-width 80px
    padding 10px 15px




