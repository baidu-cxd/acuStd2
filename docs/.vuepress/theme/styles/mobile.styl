@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.82

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size 15px
    width $mobileSidebarWidth
  .content:not(.custom)
    padding 2rem

// wide mobile
@media (max-width: $MQMobile)
  .sidebar
    top 0
    padding-top $headerHeight
    transform translateX(-100%)
    transition transform .2s ease
  .article
    padding-left 0
    margin-left 0
    margin-right 0
    margin-top 60px
    .article-wrp
      padding-top 20px
  .theme-container.sidebar-open
    .sidebar
      transform translateX(0)

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 32px
    margin 0 0 10px 0
  h2
    font-size 22px
    margin 20 0 10px 0
  h3
    font-size 18px
    margin 20 0 10px 0
  .content:not(.custom)
    padding 0 20px 
  .content
    pre, pre[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
  
