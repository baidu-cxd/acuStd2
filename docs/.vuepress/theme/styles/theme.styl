@require './config'
@require './nprogress'
@require './code'
@require './arrow'


html, body
  padding 0
  margin 0
  background-color #fff

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 14px
  color $textColorDark


.custom-layout
  padding-top 0

.navbar
  position fixed
  z-index 100
  top 0
  left 0
  right 0
  height $headerHeight
  background-color #fff
  box-sizing border-box
  border-bottom 1px solid $borderColor

.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none
  
.theme-container
  width 100%
  min-width 1200px
  &.sidebar-open
    .sidebar-mask
      display block
  &.no-navbar
    .content:not(.custom)
      h1, h2, h3, h4, h5, h6
        margin-top 1.5rem
        padding-top 0

/* webkit, opera, IE9 */
　　
::selection
  background #108cee
  color #fff
　
/* mozilla firefox */
　　
::-moz-selection
  background #108cee
  color #fff



@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar.v1
    .sidebar
      display none
    .page
      padding-left 0

@require './mobile.styl'

