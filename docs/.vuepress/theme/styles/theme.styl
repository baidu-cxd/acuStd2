@require './config'
@require './nprogress'
@require './code'
@require './custom-blocks'
@require './arrow'

html, body
  padding 0
  margin 0

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 14px
  color $textColorDark

.theme-container
  background-color #f5f5f5f5
  position absolute 
  top 0
  left 0
  right 0

.page-wrp
  background-color #fff
  max-width 880px
  box-shadow 0 4px 16px 0 #00000010
  margin auto 
  padding 80px 0

.page
  margin-left $sidebarWidth +40px
  margin-right 40px
  margin-top $headerHeight + 40px
  margin-bottom 80px

.navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $headerHeight
  background-color #fff
  box-sizing border-box
  border-bottom 1px solid $borderColor

.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none

.sidebar
  font-size 14px
  background-color #fff
  width $sidebarWidth
  position fixed
  z-index 10
  margin 0
  top 60px
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto
  

.content:not(.custom)
  max-width $contentWidth
  margin 0 auto
  padding 0 80px
  a:hover
    text-decoration underline
  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px
  img
    max-width 100%

.content.custom
  padding 0
  margin 0

a
  font-weight normal
  color $stdBlue
  text-decoration none
  &:hover
    color lighten($stdBlue, 10%)


kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  color #999
  border-left 3px solid #dfe2e5
  margin 20px 0
  padding-left 1rem
  font-size 14px

p
  line-height 26px
  margin 10px 0
  color $textColorMain
  li
    margin 10px
  img 
    margin 10px 0


ul, ol
  padding-left 16px
  margin 20px 0
  color $textColorMain
  li
    line-height 26px
    padding-left 0px
    margin 5px 0
    ul
      margin 5px 0
  a
    transition .1s color ease-in

strong
  font-weight 600
  color $textColorDark

h1, h2, h3, h4, h5, h6,
  display block
  font-weight 600
  color $textColorDark
  &:hover .header-anchor
    opacity: 1

h1
  margin 0 0px 40px 0
  font-size 36px
  line-height 56px

h2
  margin-top 60px
  margin-bottom 20px
  font-size 22px
  padding-bottom 10px
  border-bottom 1px solid $borderColor

h3
  margin 40px 0px 10px 0
  font-size 18px
  line-height 36px

a.header-anchor
  display inline
  font-size 1em
  float left
  margin-left -0.87em
  padding-right 0.23em
  opacity 0
  color #cccccc
  &:hover
    color #108cee
    cursor pointer

mark
  background-color transparent
  color $markColor

.content p code,.content li code
  background-color #0000000d
  color #666666
  padding 4px 6px
  display inline
  font-size 12px

code, kbd
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace


hr
  border 0
  border-top 1px solid $borderColor
  &.footnotes-sep
    margin-top 60px
    margin-bottom 40px

.footnotes
  margin-bottom -40px
  position relative
  background-color #f5f5f5ee
  font-size 13px
  padding 20px
  ol,li,p 
    margin 0
    line-height 26px
  &:before
    content "脚注："
    opacity .5
    color $textColorLight
    display block
    font-size 13px
    height 26px
    line-height 26px
    margin 0 0 0px 0


table
  border-collapse collapse
  margin 1rem 0

tr
  border-top 1px solid #dfe2e5
  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

.custom-layout
  padding-top $headerHeight

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block
  &.no-navbar
    .content:not(.custom)
      h1, h2, h3, h4, h5, h6
        margin-top 1.5rem
        padding-top 0


@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .sidebar
      display none
    .page
      padding-left 0

@require './mobile.styl'
