@require './config'
@require './nprogress'
@require './code'
@require './arrow'


html, body
  padding 0
  margin 0
  background-color #f5f5f5f5

body
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 14px
  color $textColorDark



.custom-layout
  padding-top 0

.navbar
  position fixed
  z-index 100
  top 0
  left 0
  right 0
  height $headerHeight
  background-color #fff
  box-sizing border-box
  border-bottom 1px solid $borderColor

.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none

.sidebar
  font-size 14px
  background-color #fff
  width $sidebarWidth
  position fixed
  z-index 10
  margin 0
  top 60px
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto

.theme-container
  width 100%
  &.sidebar-open
    .sidebar-mask
      display block
  &.no-navbar
    .content:not(.custom)
      h1, h2, h3, h4, h5, h6
        margin-top 1.5rem
        padding-top 0

a.header-anchor
  display inline
  font-size 1em
  float left
  margin-left -0.87em
  padding-right 0.23em
  opacity 0
  color #cccccc
  &:hover
    color #108cee
    cursor pointer

/* webkit, opera, IE9 */
　　
::selection 
  background #108cee
  color #fff
　
/* mozilla firefox */
　　
::-moz-selection
  background #108cee
  color #fff



@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .sidebar
      display none
    .page
      padding-left 0

@require './mobile.styl'

